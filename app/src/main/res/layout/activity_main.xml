<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    >

    <TextView
        android:id="@+id/line"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark"
        android:padding="25dp"
        android:text="नमस्कार  एप्प  आपका  स्वागत करता है आपका दिन शुभ हो "
        android:textColor="#121211"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/scanner"
        style="?attr/borderlessButtonStyle"
        android:layout_width="245dp"
        android:layout_height="80dp"
        android:layout_marginTop="24dp"

        android:background="@drawable/button_corner"
        android:text=" क्यूआर कोड स्कैनर"
        android:textAllCaps="true"
        android:textColor="#592702"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/line"
        app:layout_constraintVertical_bias="0.02"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/text_recognizer"
        style="?attr/borderlessButtonStyle"
        android:layout_width="245dp"
        android:layout_height="80dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/button_corner"
        android:backgroundTint="@color/colorPrimaryDark"
        android:text=" (OCR)स्कैनर"
        android:textColor="#592702"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/scanner" />

    <Button
        android:id="@+id/start_btn"
        style="?attr/borderlessButtonStyle"
        android:layout_width="245dp"
        android:layout_height="80dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/button_corner"
        android:text="क्विज टाइम "
        android:textColor="#592702"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_recognizer"
        app:layout_constraintVertical_bias="0.021" />

    <com.airbnb.lottie.LottieAnimationView
        android:layout_width="200dp"
        android:layout_height="190dp"
        android:background="@drawable/button_corner"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/start_btn"
        app:layout_constraintVertical_bias="0.263"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:lottie_rawRes="@raw/student" />

</androidx.constraintlayout.widget.ConstraintLayout>